@model IEnumerable<LakeInn.Models.DataModels.Room>
@{
    ViewBag.Title = "RoomRate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/room-rate.css">
@Html.Partial("../Partial/_PageTitle")
<!-- room content -->
<div class="container-fluid room-content">
    <div class="row">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-6 col-lg-6 col-md-12">
                        <div class="row room-item">
                            <div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-12 room-img" style="background-image: url(@item.Image);"></div>
                            <div class="col-xl-7 col-lg-7 col-md-7 col-sm-12 col-12 room-info">
                                <p class="title">@item.Name</p>
                                <div class="slice"></div>
                                <p class="price">Starts from <span class="num">@item.Price$</span> <span>/night</span></p>
                                <p class="criteria"><span><i class="fa fa-angle-right"></i></span> Bed: Double</p>
                                <p class="criteria"><span><i class="fa fa-angle-right">	</i></span> Max: @item.MaxGuests People</p>
                                <p class="criteria"><span><i class="fa fa-angle-right"></i></span> View: @item.RoomFace</p>
                                <p class="criteria"><span><i class="fa fa-angle-right"></i></span> Room size: 80sqm</p>
                                <button><a href="@Url.Action("DetailRoom","Home",new { id= item.Id})">Check details</a></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- end room content -->
