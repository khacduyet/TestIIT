@{
    ViewBag.Title = "Contact";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/contact.css">

@Html.Partial("../Partial/_PageTitle")

<!-- contact -->
<div class="container-fluid contact">
    <div class="big-map row">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.808871869986!2d105.77227781493282!3d21.040332185992185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313454c9755033dd%3A0xf13b328d1266f239!2zMTQ3IFBo4buRIE1haSBE4buLY2gsIE1haSBE4buLY2gsIEPhuqd1IEdp4bqleSwgSMOgIE7hu5lp!5e0!3m2!1svi!2s!4v1608189785545!5m2!1svi!2s" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div>
</div>
<!-- end contact -->
<!-- stats -->
<div class="container-fluid stats contact-info">
    <div class="container title">
        <p>Contact Us</p>
        <div class="icon-title">
            <img src="~/Content/img/icon-title.png">
        </div>
    </div>
    <div class="container info">
        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="itemBox">
                    <div class="item">
                        <p class="criteria">Address</p>
                        <p class="description">
                            The White Horse Thruxton, Hampshire SP11 8EE
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="itemBox">
                    <div class="item">
                        <p class="criteria">Phone/Email</p>
                        <p class="description">
                            <span><a href="#">Phone: 0242 242 0777</a></span><br />
                            <span><a href="#">Email: info@webhotel.vn</a></span>
                        </p>
                    </div>
                </div>
            </div><div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="itemBox">
                    <div class="item">
                        <p class="criteria">Socials</p>
                        <p class="description">
                            <a href="#"><i class="fab fa-tripadvisor"></i></a>
                            <a href="#"><i class="fab fa-facebook"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end stats -->
<!-- member contact -->
<div class="container-fluid member-contact">
    <p class="title">Say Hello</p>
    <div class="icon-title">
        <img src="~/Content/img/icon-title.png">
    </div>
    <div class="row info">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-2 col-sm hidden-xs"></div>
                <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 col-12 item contact">
                    <form>
                        <input type="text" name="" placeholder="Name" id="nameContact">
                        <input type="email" name="" placeholder="Email" id="emailContact">
                        <textarea placeholder="Message" id="msgContact"></textarea>
                        <div class="policy">
                            <div class="checkbox">
                                <input type="checkbox" name="" id="check-policy">
                            </div>
                            <div class="words">
                                <p>I agree that my submitted data is being collected and stored. For further details on handling user data, see our</br><span><a href="#">Privacy Policy</a></span></p>
                            </div>
                            <button class="condition-policy" type="button" id="click-send">send message</button>
                        </div>
                    </form>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-2 col-sm hidden-xs"></div>
            </div>
        </div>
    </div>
</div>
<!-- end member contact -->
@section scripts{
    <script type="text/javascript" src="~/Scripts/js/check-article.js"></script>
}