@model LakeInn.Models.DataModels.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutHome.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">User Detail - <b>@Html.DisplayFor(model => model.FullName)</b></h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                <div class="row">
                    <div class="col-12">
                        <div class="post">
                            <img style="max-width: 300px; width: 100%" src="@Model.Avatar" alt="user image">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">
                <h3 class="text-primary"><i class="fas fa-paint-brush"></i> Different info</h3>
                <p class="text-muted">
                    Phone: @Html.DisplayFor(model => model.Phone)
                </p>
                <p class="text-muted">
                    Email: @Html.DisplayFor(model => model.Email)
                </p>
                <p class="text-muted">
                    Status:
                    @if (Model.Status)
                    {
                        <span class="badge badge-success">Unlock</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Lock</span>
                    }
                </p>
                <br>
                <div class="text-muted">
                    <p class="text-sm">
                        Date Created
                        <b class="d-block">@Html.DisplayFor(model => model.Date_Created)</b>
                    </p>
                    <p class="text-sm">
                        Date Updated
                        <b class="d-block">
                            @Html.DisplayFor(model => model.Date_Updated)
                        </b>
                    </p>
                </div>

                <div class="text-center mt-5 mb-3">
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-warning">Back to list</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>