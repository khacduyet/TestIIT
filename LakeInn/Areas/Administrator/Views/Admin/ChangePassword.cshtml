@model LakeInn.Models.DataModels.User
@{ var session_user = Session["User"] as LakeInn.Models.DataModels.User;}
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutHome.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle" src="@session_user.Avatar" alt="User profile picture">
                    </div>

                    <h3 class="profile-username text-center">@session_user.FullName</h3>

                    <p class="text-muted text-center">LakeInn Staff Agent</p>

                    <a href="@Url.Action("Index")" class="btn btn-warning btn-block"><b>Back to index</b></a>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#settings" data-toggle="tab">Password</a></li>
                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="settings">
                            <form class="form-horizontal" method="POST" action="@Url.Action("ChangePassword")">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">Old Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" name="oldPass" value="@((ViewBag.old !=null)?ViewBag.old:"")" class="form-control" />
                                        @Html.ValidationMessage("OldPass", "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">New Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" name="Password" value="@((ViewBag.pass !=null)?ViewBag.pass:"")" class="form-control" />
                                        @Html.ValidationMessage("NewPass", "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="inputName2" class="col-sm-2 col-form-label">Confirm Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" name="ConPass" value="@((ViewBag.con !=null)?ViewBag.con:"")" class="form-control" />
                                        @Html.ValidationMessage("ConPass", "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div><!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
